                    <% } %> 
                </div>
            </div>
        
            <nav>
                <div class="links">
                    <a id = "selected" href="#">HOME</a>
                    <a href="/about">ABOUT</a>
                    <a href="/addFood">ADD FOOD</a>
                    <a href="#">SEARCH FOOD</a>
